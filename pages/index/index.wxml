<view class="container">
  <view class="userinfo">
    <button class="image-button" wx:if="{{!imageUrl}}" bindtap='chooseImage'> + </button>
    <block wx:else>
      <image class="userinfo-avatar" src="{{imageUrl}}" background-size="cover"></image>
      <!-- <text class="userinfo-nickname">{{userInfo.nickName}}</text> -->
    </block>
  </view>
  <view class="usermotto">
    <!-- <text class="user-motto">{{motto}}</text> -->
    <textarea value="{{t}}" placeholder='输入文字'></textarea>
  </view>
  <view>
    <button class="save-button">保存并分享</button>
  </view>
</view>
